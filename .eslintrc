{
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest/globals": true
    },
    "extends": ["airbnb/base"],
    "plugins": [
        "prettier",
        "import",
        "jest"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "arrow-body-style": ["error", "always"],
        "no-console": "off",
        "no-unused-expressions": "off"
    }
}
