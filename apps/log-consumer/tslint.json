{
    "defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"rules": {
		"no-console": true,
		"typedef": [ true, "call-signature"],
		"variable-name": [
			true,
			"allow-leading-underscore"
		],
		"no-unused-expression": false
	},
    "linterOptions": {
        "exclude": [
            "node_modules/**",
            "src/server.ts",
			"src/app.ts",
			"src/services/logger.ts"
        ]
    }
}
